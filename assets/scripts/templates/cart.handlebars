{{#if items}}



  <div class="row">
    {{#each items as |item|}}
      <div class="col-lg-12 item">
        <div data-cardDivID="{{itemId}}">
          <div class="row">
            <div class="col-xs-4">
              <img src="https://s3.amazonaws.com/anna0312wdi/nozama-images/{{itemId.image}}" class="item-image-small">
            </div>
            <div class="col-xs-8">
              <strong>{{itemId.name}}</strong>
              <br> ${{itemId.price}}
              <br>
              <div class="form-inline">
                <div class="form-group">
                  <select id="qty_{{itemId._id}}" name="item[qty]" class="form-control" data-qtyitemid="{{itemId._id}}" value="{{itemId.itemQty}}">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </div>
                  <button id="btnupdateqty_{{itemId._id}}" type="submit" class="btn btn-info btn-update-item" data-btnupdateitemid="{{item._id}}">Update</button>
                  <button id="btnremove_{{itemId._id}}" type="submit" class="btn btn-danger btn-remove-item" data-btnremoveitemid="{{item._id}}">Remove</button>
                </div>
            </div>
          </div>
          {{description}}

        </div>
      </div>

    {{/each}}
  </div>
{{else}}
  <div class="message">No items</div>
{{/if}}
