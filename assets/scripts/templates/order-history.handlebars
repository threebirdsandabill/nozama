{{#if orders}}
  <div class="row">
    <div class="form-group">
      <table id="clientOrderHistory" class="table table-bordered nowrap">
        <thead>
          <tr>
            <th>Date</th>
            <th>Item ID</th>
            <th>Quantity</th>
            <th>Cost</th>
          </tr>
        </thead>
        <tbody>
        {{#each orders as |order|}}
          <tr>
            <td>{{order.id}}</td>
            <td>{{order.orderDate}}</td>
            <td>{{order.quantity}}</td>
            <td>{{order.cost}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{else}}
  <div class="message">No Orders</div>
{{/if}}
