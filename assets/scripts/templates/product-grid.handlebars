{{#if items}}
  <div class="row">
    {{#each items as |item|}}
      <div class="col-sm-6 col-xs-12 col-md-4 item">
        <div class="card" data-cardDivID="{{item.id}}">
          <div class="row">
            <div class="col-xs-4">
              <img src="https://s3.amazonaws.com/anna0312wdi/nozama-images/{{image}}" class="item-image-small">
            </div>
            <div class="col-xs-8">
              <strong>{{name}}</strong>
              <br> ${{price}}
              <br>
              <div class="form-inline">
                <div class="form-group">
                  <select id="qty_{{item.id}}" name="item[qty]" class="form-control" data-qtyitemid="{{item.id}}">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </div>

                  <button id="btn_{{item.id}}" type="submit" class="btn btn-info btn-add-to-cart" data-btnitemid="{{item.id}}">Add to cart</button>

                </div>
            </div>
          </div>
          {{description}}

        </div>
      </div>

    {{/each}}
  </div>
{{else}}
  <div class="message">No items</div>
{{/if}}
